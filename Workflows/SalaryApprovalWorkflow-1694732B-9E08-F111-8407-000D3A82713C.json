            "operationMetadataId": "2474fb60-55b1-4931-b051-700b9842e0ec"
          },
          "type": "OpenApiConnection",
          "inputs": {
            "host": {
              "connectionName": "shared_office365",
              "operationId": "SendEmailV2",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_office365"
            },
            "parameters": {
              "emailMessage/To": "rinesh.chaulagai@agile.com.np",
              "emailMessage/Subject": "Salary Payslip - @{body('Get_item')?['Month']?['Value']} @{body('Get_item')?['Year']}\n",
              "emailMessage/Body": "<p>Hello,<br>\n<br>\nYour salary has been approved and your payslip is attached.<br>\n<br>\nMonth: @{body('Get_item')?['Month']?['Value']}<br>\nYear: @{body('Get_item')?['Year']}<br>\n<br>\nRegards,<br>\nFinance Department<br>\n</p>",
              "emailMessage/Attachments": [
                {
                  "Name": "SalaryPayslip.pdf",
                  "ContentBytes": "@body('Convert_file')"
                }
              ],
              "emailMessage/Importance": "Normal"
            },
            "authentication": "@parameters('$authentication')"
          }
        }
      },
