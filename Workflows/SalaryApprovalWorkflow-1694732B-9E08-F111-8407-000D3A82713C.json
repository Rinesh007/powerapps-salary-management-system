        },
        "Populate_a_Microsoft_Word_template": {
          "runAfter": {
            "Initialize_variable_3": [
              "Succeeded"
            ]
          },
          "metadata": {
            "01NQRUKSAQOYPA4SDHPBH2V3JNPNBDH5IE": "/Templates/SalarySlipTemplate.docx",
            "operationMetadataId": "5bd73285-4146-411b-87eb-b60433e9d49e"
          },
          "type": "OpenApiConnection",
          "inputs": {
            "host": {
              "connectionName": "shared_wordonlinebusiness",
              "operationId": "CreateFileItem",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_wordonlinebusiness"
            },
            "parameters": {
              "source": "sites/agilesoln.sharepoint.com,df578267-2886-4d5a-b7e3-404e5edf6e32,668ccf0e-ddc1-4847-9270-6d0de3d660ef",
              "drive": "b!Z4JX34YoWk2340BOXt9uMg7PjGbB3UdIknBtDePWYO8ptbB_SXFzT4yTtf8ZTpDV",
              "file": "01NQRUKSAQOYPA4SDHPBH2V3JNPNBDH5IE",
              "dynamicFileSchema/20136949": "@outputs('Get_item')?['body/Month/Value']",
              "dynamicFileSchema/652068252": "@variables('FinalPayableSalary')",
              "dynamicFileSchema/894455837": "@outputs('Get_item')?['body/LeaveDays']",
              "dynamicFileSchema/1215718808": "@outputs('Get_item')?['body/Year']",
              "dynamicFileSchema/1218260979": "@variables('DeductionAmount')",
              "dynamicFileSchema/1331192425": "@variables('SalaryPerDay')",
              "dynamicFileSchema/1613665600": "@outputs('Get_item')?['body/Employee/Value']",
              "dynamicFileSchema/1881806786": "@outputs('TotalDaysInMonth')",
              "dynamicFileSchema/2049337312": "@outputs('Get_item')?['body/WorkingDays']"
            },
            "authentication": "@parameters('$authentication')"
          }
        },
        "TotalDaysInMonth": {
          "runAfter": {
            "Condition": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "5bd45c1e-8577-4bc1-94c0-8cd32dd4cd7a"
          },
          "type": "Compose",
          "inputs": "@if(equals(body('Get_item')?['Month']?['Value'],'January'),31,\r\nif(equals(body('Get_item')?['Month']?['Value'],'February'),28,\r\nif(equals(body('Get_item')?['Month']?['Value'],'March'),31,\r\nif(equals(body('Get_item')?['Month']?['Value'],'April'),30,\r\nif(equals(body('Get_item')?['Month']?['Value'],'May'),31,\r\nif(equals(body('Get_item')?['Month']?['Value'],'June'),30,\r\nif(equals(body('Get_item')?['Month']?['Value'],'July'),31,\r\nif(equals(body('Get_item')?['Month']?['Value'],'August'),31,\r\nif(equals(body('Get_item')?['Month']?['Value'],'September'),30,\r\nif(equals(body('Get_item')?['Month']?['Value'],'October'),31,\r\nif(equals(body('Get_item')?['Month']?['Value'],'November'),30,31)))))))))))\r\n"
        },
        "Initialize_variable": {
          "runAfter": {
            "TotalDaysInMonth": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "a40eb7f7-5110-4913-a281-1c04eac23690"
          },
          "type": "InitializeVariable",
          "inputs": {
            "variables": [
              {
                "name": "SalaryPerDay",
                "type": "string",
                "value": "@formatNumber(\r\n    div(\r\n        float(body('Get_item')?['FixedSalary']),\r\n        float(outputs('TotalDaysInMonth'))\r\n    ),\r\n'0.00'\r\n)\r\n"
              }
            ]
          }
        },
        "Initialize_variable_2": {
          "runAfter": {
            "Initialize_variable": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "9b8a969a-a1f7-4952-adef-1144c57a21f0"
          },
          "type": "InitializeVariable",
          "inputs": {
            "variables": [
              {
                "name": "DeductionAmount",
                "type": "string",
                "value": "@formatNumber(\r\n    mul(\r\n        float(body('Get_item')?['LeaveDays']),\r\n        float(\r\n            div(\r\n                float(body('Get_item')?['FixedSalary']),\r\n                float(outputs('TotalDaysInMonth'))\r\n            )\r\n        )\r\n    ),\r\n'0.00'\r\n)\r\n"
              }
            ]
          }
        },
        "Initialize_variable_3": {
          "runAfter": {
            "Initialize_variable_2": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "e5df3f3d-e321-4550-8f06-84dab7e0b8b1"
          },
          "type": "InitializeVariable",
          "inputs": {
            "variables": [
              {
                "name": "FinalPayableSalary",
                "type": "string",
                "value": "@formatNumber(\r\n    sub(\r\n        float(body('Get_item')?['FixedSalary']),\r\n        float(variables('DeductionAmount'))\r\n    ),\r\n'0.00'\r\n)\r\n"
              }
            ]
          }
        },
